page,
.container {
    height: 100vh;
    width: 100%;
}
.header{
    margin-bottom: 60rpx;
}
.top-right {
    position: absolute;
    top: 20rpx;
    right: 30rpx;
    width: 70rpx;
    height: 70rpx;
    z-index: 99;
}

.baseImg {
    width: 100%;
    height: 100%;
}

.bgImg {
    width: 100%;
    height: 400rpx;
    overflow: hidden;
}

.bg {
    width: 100%;
    height: 100%;
}

.headerNickName {
    position: absolute;
    top: 325rpx;
    right: 200rpx;
    color: #fff;
    font-size: 36rpx;
    letter-spacing:4rpx;
}

.headerAvatar {
    width: 150rpx;
    height: 150rpx;
    position: absolute;
    top: 280rpx;
    right: 20rpx;
    border: 2px solid #fff;
    overflow: hidden;
    z-index: 99;
}
.weui-flex{
    display: flex;
    flex-direction: column;
    padding-bottom: 40rpx;
}
.weui-flex::before{
    content: '';
    border-top: none;
}

.weui-cell~.weui-cell::before{
    margin-left: 0;
    top: 0;
    left: 0;
    border-top: 1rpx solid #d9d9d9
}
.userInfo{
    position: absolute;
    left: 0;
    padding: 20rpx;
}
.userInfo .thumb{
    display: inline-block;
    width: 80rpx;
    height: 80rpx;
    margin-right: 5px;
    vertical-align: middle;
}
.userInfo .nickName{
    position: absolute;
    top: 10rpx;
    left: 120rpx;
    width: 200rpx;    
    color:#576b95;
    font-size: 34rpx;
}
.content-box{
    margin-left: 80rpx;
}
.content{
    padding-top:10rpx;
    font-size: 32rpx;
}
.images_box{
    margin: 0 auto;
}
.images_box .userImg{
    width: 190rpx;
    height: 190rpx;
}
.content_ft{
    font-size: 28rpx;
    color: #576b95;
}
.content_ft .time{
    display: inline-block;
    vertical-align: middle;
    color: #999;
}
.content_ft .operation{
    display: inline-block;
    margin-left: 40rpx;
}
.commentImg{
    position: absolute;
    right: 10rpx;
    bottom: 20rpx;
    padding-top: 20rpx;
    width: 50rpx;
    height: 45rpx;
}
.commentImg image{
    width: 100%;
    height: 100%;
}